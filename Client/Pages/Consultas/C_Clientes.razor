@page "/c_cliente"
@inject HttpClient httpClient


<div class="card">
        <div class="card-header d-flex align-items-center">
            <img src="zyroimage.png" class="img-logo" />
            <h1>Consulta de Clientes</h1>
        </div>
        <div class="row">
            <div class="col-md-3 ">
                <label>Filtrar ID:</label>
                <InputNumber @bind-Value="Filtro" class="form-control"></InputNumber>
            </div>

            <div class="col-md-3 ">
                <label>Filtrar Nombre:</label>
                <InputText @bind-Value="Nombre" class="form-control"></InputText>
            </div>

            <div class="col-md-3 ">
                <br />
                <button type="button" class="btn btn-outline-primary oi oi-magnifying-glass" @onclick="Buscar"></button>
            </div>
        </div>

        @if (ListaClientes is not null)
        {
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>ClienteId</th>
                        <th>Nombre</th>
                        <th>Apellido</th>
                        <th>Email</th>
                        <th>Contrase&ntilde;a</th>
                        <th>Tel&eacute;fono</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var p in ListaClientes)
                    {
                        <tr>
                            <td>@p.ClienteId</td>
                            <td>@p.Nombre</td>
                            <td>@p.Apellido</td>
                            <td>@p.Email</td>
                            <td>@p.Clave</td>
                            <td>@p.Teléfono</td>
                        </tr>
                    }
                    <tr>
                        <td>Cantidad: @conteo</td>
                    </tr>

                </tbody>

            </table>
        }
</div>

@code {
    public List<Clientes>? ListaClientes { get; set; }
    public int conteo { get; set; }
    public string? Nombre { get; set; }
    public int Filtro { get; set; }
    protected override async Task OnInitializedAsync()
    {
        await Buscar();
    }

    public async Task Buscar()
    {
        var ListaClientesTemporal = await httpClient.GetFromJsonAsync<List<Clientes>>($"api/Clientes");
        ListaClientes = ListaClientesTemporal?
                    .Where(x => (x.ClienteId == Filtro || Filtro == 0) &&
                                (string.IsNullOrEmpty(Nombre) || (x.Nombre != null && x.Nombre.ToLower().Contains(Nombre.ToLower()))))
                    .ToList();
        conteo = ListaClientes != null ? ListaClientes!.Count() : 0;
        StateHasChanged();
    }
}
